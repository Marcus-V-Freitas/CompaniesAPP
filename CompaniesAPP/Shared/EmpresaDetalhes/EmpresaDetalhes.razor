@if (Company != null)
{
    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th scope="col">Campo</th>
                <th scope="col">Valor</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var property in HtmlDynamicDisplay.GetProperties(Company))
            {
                <tr>
                    <td scope="row">@(property.GetDisplayName())</td>
                    <td scope="row">@((MarkupString)HtmlDynamicDisplay.GetValue(property.GetValue(Company)!))</td>
                </tr>
            }
        </tbody>
    </table>
}       